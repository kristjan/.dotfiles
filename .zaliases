alias ..='cd ..'

alias la='ls -a'

alias histogram='sort | uniq -c'

alias srcs='. ~/.zshrc'
alias aliases='vim ~/.zaliases; srcs'
alias options='vim ~/.zshrc; srcs'

alias g='git'
alias gst='git st'
alias gull='git pull'
alias gush='git push'
alias gulsh='gull && gush'
alias giff='git diff'
alias giffc='git diff --cached'
alias gom='git commit'
alias gomend='gom --amend --no-edit'
alias gad='git add'
alias gap='git add --patch'
alias goot='cd $(git rev-parse --show-toplevel)'

alias ffmpeg="ffmpeg -hide_banner"
alias ffprobe="ffprobe -hide_banner"

alias vim='nvim'
