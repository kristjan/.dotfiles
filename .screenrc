deflogin on
autodetach on
startup_message off
maptimeout 5

defshell -bash
vbell off
defscrollback 10000

bind = eval "resize +10"
bind - eval "resize -10"

bind k eval "focus up"
bind j eval "focus down"
bind h eval "focus left"
bind l eval "focus right"
bind f eval "fit"

split -h
focus next
screen

split -v
focus next
screen

focus next
screen
resize 75

layout save layout
