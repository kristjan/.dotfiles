alias ..='cd ..'
alias srcs='. ~/.bashrc'

alias bobble='ssh $BOBBLE_HOST'

alias a='echo á'
alias kristjan='echo Kristj$(a)n'
alias e='echo é'
alias petursson='echo P$(e)tursson'

alias la='ls -a'
alias dir='ls -l'
alias dira='ls -la'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'

alias tmux='tmux -2'

alias crontab='VIM_CRONTAB=true crontab'

alias aliases='vim ~/.aliases; srcs'
alias options='vim ~/.bashrc; srcs'
alias profile='vim ~/.bash_profile; srcs'
alias notes='vim ~/vimwiki/index.wiki'
alias todo='vim ~/vimwiki/TODO.wiki'
alias :e='vim'
alias b='bundle exec'
alias d='dotenv'

alias synergys='killall synergys; synergys -f --config ~/.synergyrc --daemon'
alias synergyc='killall synergyc; /usr/bin/synergyc kristjan.corp.causes.com'

alias mig='b rake db:migrate'
alias vimig='vim db/migrate/$(ls -clrt db/migrate/ | tail -1 | cut -d " " -f 9)'

alias g='git'
if [ -f `which hub` ]; then
  alias h=`which hub`
fi
alias gst='git st'
alias gull='git pull'
alias gush='git push'
alias gulsh='gull && gush'
alias gultch='gull && make test && gush'
alias giff='git diff'
alias giffc='git diff --cached'
alias gom='git commit'
alias gomend='gom --amend'
alias gad='git add'
alias gap='git add --patch'
alias goot='cd $(git rev-parse --show-toplevel)'

alias and='ant debug && adb install -r `ls bin/*-debug.apk`'
alias redshift='psql service=redshift'
alias redshift_dev='psql service=redshift-dev'
alias sc='screen'
alias scx='screen -xR'

alias cdgem='cd `ruby -e "puts Gem.path" | head -1`/gems'

alias rmlog='for file in log/*; do cat /dev/null > $file; done'
alias running='ps aux | grep $1'

alias resmem='sudo /sbin/service memcached restart'

alias lstmp='find . -name '*.sw[op]''
alias rmtmp='echo Deleting $(lstmp | wc -l ) files && lstmp && lstmp -exec rm "{}" \;'
alias rmdbg='cat /dev/null > log/debug.log'
alias debug='tail -f log/debug.log'
alias log='tail -f log/development.log'

# Apartment List
alias rmdata='rm -rf Data-* pull'
alias format='xmllint --format'
alias plink='rm -f pull; ln -sF `ls -ld Data-* | rev | cut -d" " -f1 | rev | sort | tail -1` pull; ls -ld pull'

# Typos
alias mc='mv'
alias vi='vim'
